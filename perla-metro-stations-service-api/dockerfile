# Etapa 1: Build
FROM mcr.microsoft.com/dotnet/sdk:9.0 AS build
WORKDIR /src

# Copiar y restaurar dependencias
COPY ["src/perla-metro-stations-service-api.csproj", "./"]
RUN dotnet restore "perla-metro-stations-service-api.csproj"

# Copiar el resto del c贸digo
COPY src/ .

# Publicar la aplicaci贸n
RUN dotnet publish "perla-metro-stations-service-api.csproj" -c Release -o /app/publish --no-restore

# Etapa 2: Runtime
FROM mcr.microsoft.com/dotnet/aspnet:9.0 AS runtime
WORKDIR /app

# Copiar la aplicaci贸n publicada
COPY --from=build /app/publish .

# Configuraci贸n para Render
ENV ASPNETCORE_URLS=http://+:$PORT
ENV ASPNETCORE_ENVIRONMENT=Production

EXPOSE 8080

ENTRYPOINT ["dotnet", "perla-metro-stations-service-api.dll"]